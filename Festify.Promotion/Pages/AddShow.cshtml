@page "{ShowGuid}"
@model Festify.Promotion.Pages.AddShowModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    Layout = "_Layout";
}

<h1>Add Show</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title</label>
        <input class="form-control" asp-for="Title">
    </div>
    <div class="form-group">
        <label for="Date">Date</label>
        <input class="form-control" asp-for="Date">
    </div>
    <div class="form-group">
        <label for="City">City</label>
        <input class="form-control" asp-for="City">
    </div>
    <div class="form-group">
        <label for="Venue">Venue</label>
        <input class="form-control" asp-for="Venue">
    </div>
    <div class="form-group">
        <label for="Image">Image</label>
        <input class="form-control" asp-for="Image">
    </div>
    <input name="__RequestVerificationToken" type="hidden" value="@Xsrf.GetAndStoreTokens(this.HttpContext).RequestToken" />
    <button type="submit" class="btn btn-primary">Add</button>
</form>